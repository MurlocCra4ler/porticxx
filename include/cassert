#pragma once

#include <cstdlib>
#include <iostream>

#ifdef NDEBUG
#  define assert(expr) ((void)0)
#else
#  define assert(expr)                                              \
    ( (expr) ? (void)0 :                                            \
      (std::cerr << "Assertion failed: (" << #expr << "), file "    \
                 << __FILE__ << ", line " << __LINE__ << std::endl, \
       std::abort()) )
#endif
